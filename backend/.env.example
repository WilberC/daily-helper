# ==============================================
# Django Configuration
# ==============================================

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-change-this-in-production

# Debug mode - MUST be False in production
DEBUG=True

# Allowed hosts - comma-separated list of domains
# Development: localhost,127.0.0.1
# Production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================
# Database Configuration
# ==============================================
# For SQLite (development):
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# ==============================================
# Session Configuration
# ==============================================

# Session cookie age in seconds (86400 = 24 hours)
SESSION_COOKIE_AGE=86400

# SameSite cookie policy
# Development (cross-origin): None
# Production (same-origin): Lax or Strict
SESSION_COOKIE_SAMESITE=None

# Secure cookie flag
# Development (HTTP): False
# Production (HTTPS): True
SESSION_COOKIE_SECURE=False

# ==============================================
# CORS Configuration
# ==============================================

# Allowed origins - comma-separated list
# Development: http://localhost:5173
# Production: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Frontend URL (for reference)
FRONTEND_URL=http://localhost:5173

# ==============================================
# Production Example Configuration
# ==============================================
# Uncomment and modify these for production:
#
# SECRET_KEY=your-generated-secret-key-here
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SESSION_COOKIE_SAMESITE=Lax
# SESSION_COOKIE_SECURE=True
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# FRONTEND_URL=https://yourdomain.com
